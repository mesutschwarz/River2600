{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ROM",
            "type": "shell",
            "osx": {
                "command": "make"
            },
            "windows": {
                "command": "make.bat"
            },
            "linux": {
                "command": "make"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile",
                "$gcc"
            ]
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        }
    ]
}